<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="view_quotation_tree_inherit_patient" model="ir.ui.view">
            <field name="name">sale.order.tree.patient</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <!-- Change header of partner_id (Customer) column to Patient -->
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Patient</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
