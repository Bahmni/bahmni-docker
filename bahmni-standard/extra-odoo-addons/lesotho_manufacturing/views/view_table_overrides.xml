<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Manufacturing Orders tree view -->
    <record id="view_mrp_production_tree_prepack" model="ir.ui.view">
        <field name="name">mrp.production.tree.prepack.custom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">

            <!-- Example 2: Change 'Quantity To Produce' to 'Prepack Qty' -->
            <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="string">Prepack Qty</attribute>
            </xpath>

            <!-- Example 3: Change 'Deadline Start' to 'Prepack Date' -->
            <xpath expr="//field[@name='date_planned_start']" position="attributes">
                <attribute name="string">Prepack Date</attribute>
            </xpath>

            <!-- Change 'MO Readiness' to 'Prepack Readiness' -->
            <xpath expr="//field[@name='reservation_state']" position="attributes">
                <attribute name="string">PO Readiness</attribute>
            </xpath>

        </field>
    </record>

    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="help" type="html">
            <p>No prepacking order found. Letâ€™s create one.</p>
            <p>Consume components and build finished products using prepacking templates.</p>
        </field>
    </record>

      <record id="mrp_unbuild_tree_view_prepack" model="ir.ui.view">
            <field name="name">mrp.unbuild.tree.prepack.custom</field>
            <field name="model">mrp.unbuild</field>
            <field name="inherit_id" ref="mrp.mrp_unbuild_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bom_id']" position="attributes">
                    <attribute name="string">Prepacking Template</attribute>
                </xpath>
                <xpath expr="//field[@name='mo_id']" position="attributes">
                    <attribute name="string">Prepacking Order</attribute>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="attributes">
                    <attribute name="string">Batch/Serial Number</attribute>
                </xpath>
                
            </field>
    </record>


    <record id="mrp.mrp_unbuild" model="ir.actions.act_window"> 
        <field name="help" type="html">
            <p>No reverse order found</p> 
            <p>A reverse order is used to break down a prepack into its components.</p>
        </field> 
    </record>

    <record id="stock_scrap_tree_view_lesotho_custom" model="ir.ui.view">
            <field name="name">stock.stock_scrap_tree_view.lesotho.custom</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='scrap_location_id']" position="attributes">
                    <attribute name="string">Unserviceable Location</attribute>
                </xpath>
            </field>
    </record>

    <record id="stock.action_stock_scrap" model="ir.actions.act_window">
            <field name="help" type="html">
                <p>No move to unserviceable order found</p>
                <p>Moving a product to unserviceable will remove it from your stock.</p>
            </field>
    </record>

</odoo>